pipeline {
    agent any
    stages {
        stage('checkout'){
            steps{
                checkout([$class: 'GitSCM',
                        branches: [[name: 'master']],
                        userRemoteConfigs: [[url: 'https://github.com/example/repo.git']]])
            }
        }
    }
        stage('build'){
            steps{
                sh 'echo build'
            }
        }
        stage('test'){
            steps{
                sh 'testing...'
            }
        }
        stage('build an image'){
            steps{
                sh 'echo building image'
            }
        }
        stage('post'){
            steps{
                sh 'echo posting'
            }
        }
    }
}